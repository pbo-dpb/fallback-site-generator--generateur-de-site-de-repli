{% extends "base.twig" %}
{% block title %}{% endblock %}
{% block content %}

<h1 class="leading-none font-thin text-4xl">
{{ strings.title }}
</h1>

<p class="text-xl font-thin">{{ strings.description }}</p>


<div class="flex flex-col lg:grid grid-flow-row-dense grid-cols-3 gap-4">
  <a class="border border-gray-300 underline text-blue-800 rounded bg-gray-100 hover:bg-blue-100 text-center p-4 font-semibold" href="/{{language}}/publications/">{{ strings.publications }}</a>
  <a class="border border-gray-300 underline text-blue-800 rounded bg-gray-100 hover:bg-blue-100 text-center p-4 font-semibold" href="/{{language}}/about-epc--a-propos-cpe/">{{ strings.epc_estimates }}</a>
  <a class="border border-gray-300 underline text-blue-800 rounded bg-gray-100 hover:bg-blue-100 text-center p-4 font-semibold" href="/{{language}}/information-requests--demandes-information/">{{ strings.irs }}</a>
</div>


<div class="flex flex-col lg:grid grid-flow-row-dense grid-cols-3 gap-4">
  {% for section in sections %}
  
  <div class="border-l-2 border-gray-300 p-4">
    <h3 class="font-semibold text-lg mb-4">{{ section.title }}</h3>
    <ul class="flex flex-col gap-2">
      {% for page in section.pages %}
        <li>
          <a href="{{ page.link }}" class="underline text-blue-800">{{ page.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
  {% endfor %}
 </div>


{% endblock %}